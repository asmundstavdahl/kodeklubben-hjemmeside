<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title box-title-lg">Sponsorer</h3>
    </div>
    <div class="box-body">
        {% if sponsors|length == 0 %}
            <p>Ingen sponsorer</p>
        {% else %}
            {% for sponsor in sponsors %}
                <div class="col-md-3 col-sm-6 hero-feature">
                    <div class="box box-primary" onclick="location.href = '{{ sponsor.url }}'">
                        <div class="box-body sponsor clickable">
                            <div class="img-container">
                                {% include 'image/editable_image_template.html.twig' with {'image': get_image("sponsor_" ~ sponsor.id)} %}
                            </div>
                            <div>
                                <h3>{{ sponsor.name }}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
